<div class="global">
  <div class="container-left">
    <div class="navbar-left">
      <div class="sidebar">
        <% @categories.each do |category| %>
          <div class="nav-link" data-controller="category" data-category-target="categoryName"><%= category.name %></div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container-right">
    <div class="header">
      <div></div>
      <div class="search">
        <input type="text" id="search-name" class="searchbar" placeholder="Solar systems...">
        <%# <input type="submit" value="Search"> %>
      </div>
      <div class="list-system"></div>
    </div>
    <div class="cards-container p-3">
    <% @planets.each do |planet| %>
      <%= link_to planet_path(planet) do %>
      <div class="card">
        <div class="img-container">
        <%= image_tag(["temperate","murky","arid","artic","humid","rocky","tropical"].sample,class: "img") %>
        </div>
        <div class="text">
          <h1><%= planet.name %></h1>
          <p><%= planet.content %></p>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>

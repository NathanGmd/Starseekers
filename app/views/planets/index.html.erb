<div class="global">
  <div class="container-left">
    <div class="navbar-left">
      <div class="sidebar">
        <% @categories.each do |category| %>
          <%= link_to planets_path(category: category.name) do %>
            <div class="nav-link"><%= category.name %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container-right">
    <div class="header">
      <div><%= params[:category] %></div>
      <div class="search1">
            <div class="">
              <%= form_with url: planets_path, method: :get, class: "" do %>
                <%= text_field_tag :query,
                      params[:query],
                      class: "form-control",
                      placeholder: "Solar systems...."
                  %>
                <%# <%= submit_tag "Search", sname: "", class: "searchbar" %>
              <% end %>
          </div>
      </div>
      <div class="list-system"></div>
    </div>
    <div class="cards-container p-3">
    <% @planets.each do |planet| %>
      <%= link_to planet_path(planet) do %>
      <div class="card">
        <div class="img-container" style="background-image: url(<%= image_path(planet.image) %>);"></div>
        <div class="text-planet">
          <h1><%= planet.name %></h1>
          <p></p>
          <p><%= planet.content %></p>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>


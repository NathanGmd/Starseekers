<div class="presentation">
  <div class="content">
    <div class="centered">
      <h1 class="title-booking">My Bookings</h1>
    </div>
    <div class="scrollable-content">
      <ul class="bookings">
        <% @bookings.each do |booking| %>
          <li class="booking" data-booking-id="<%= booking.id %>">
            <div class="booking-details">
              <span class="booking-title">Email:</span>
              <span class="booking-user"> <strong><%= booking.user.email %></strong></span>
              <span class="booking-title">Start Date:</span>
              <span class="booking-start-date"><%= booking.start_date %></span>
              <span class="booking-title">End Date:</span>
              <span class="booking-end-date"><%= booking.end_date %></span>
              <span class="booking-title">Planet:</span>
              <span class="booking-planet"><%= booking.planet.name %></span>
            </div>
            <div class="actions">
              <%= button_to booking_path(booking), method: :delete, data: { turbo_method: :delete } do %>
                Delete
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
